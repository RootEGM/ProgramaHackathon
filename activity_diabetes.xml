<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".Diabetes"
    android:id="@+id/Fondo"
    android:background="#15874236">

    <Button
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:text="Descripción"
        android:id="@+id/boton"
        android:layout_marginTop="38dp"
        android:clickable="true"
        android:enabled="true"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:typeface="monospace" />
    <Button
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:text="Sintomatología"
        android:id="@+id/boton_g"
        android:clickable="true"
        android:enabled="true"
        android:textStyle="bold"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/boton"
        android:layout_alignStart="@+id/boton" />
    <Button
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:text="tips caseros"
        android:id="@+id/boton_h"
        android:clickable="true"
        android:enabled="true"
        android:layout_below="@+id/boton_g"
        android:layout_alignLeft="@+id/boton_g"
        android:layout_alignStart="@+id/boton_g"
        android:layout_marginTop="36dp"
        android:textStyle="bold" />
    <Button
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:text="Contacto a profesionales"
        android:id="@+id/boton_p"
        android:clickable="true"
        android:enabled="true"
        android:layout_below="@+id/boton_h"
        android:layout_alignLeft="@+id/boton_h"
        android:layout_alignStart="@+id/boton_h"
        android:layout_marginTop="36dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Diabetes"
        android:id="@+id/textView"
        style="@style/Base.TextAppearance.AppCompat.Display1"
        android:autoText="false"
        android:textAlignment="center"
        android:layout_marginTop="64dp"
        android:textIsSelectable="false"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
