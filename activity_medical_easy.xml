<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MedicalEasy"
    android:id="@+id/Fondo"
    android:background="#15874236">

    <Button
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:text="Diabetes"
        android:id="@+id/boton"
        android:layout_marginTop="157dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:clickable="true"
        android:enabled="true" />
    <Button
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:text="Gastritis"
        android:id="@+id/boton_g"
        android:layout_alignTop="@+id/boton"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:clickable="true"
        android:enabled="true" />
    <Button
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:text="Hipertension Arterial"
        android:id="@+id/boton_h"
        android:layout_marginTop="39dp"
        android:layout_below="@+id/boton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:clickable="true"
        android:enabled="true" />
    <Button
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:text="Cancer de Prostata"
        android:id="@+id/boton_p"
        android:layout_alignTop="@+id/boton_h"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:clickable="true"
        android:enabled="true" />

</RelativeLayout>
