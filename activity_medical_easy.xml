<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MedicalEasy"
    android:id="@+id/Fondo"
    android:background="#ff79ffaf">

    <Button
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="Diabetes"
        android:id="@+id/boton"
        android:clickable="true"
        android:enabled="true"
        android:layout_below="@+id/boton_g"
        android:layout_centerHorizontal="true"
        android:background="#FF8891FF" />
    <Button
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="Gastritis"
        android:id="@+id/boton_g"
        android:clickable="true"
        android:enabled="true"
        android:layout_below="@+id/boton_h"
        android:layout_alignLeft="@+id/boton"
        android:layout_alignStart="@+id/boton"
        android:background="#FF8891FF" />
    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="Hipertension Arterial"
        android:id="@+id/boton_h"
        android:clickable="true"
        android:enabled="true"
        android:layout_below="@+id/boton_p"
        android:layout_alignLeft="@+id/boton_p"
        android:layout_alignStart="@+id/boton_p"
        android:background="#FF8891FF" />
    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="Cancer de Prostata"
        android:id="@+id/boton_p"
        android:clickable="true"
        android:enabled="true"
        android:layout_marginTop="203dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="#ff8891ff" />

</RelativeLayout>
